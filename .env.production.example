# AWS SES Email Configuration for BIMCalc
# Copy this file to .env.production and fill in your AWS SES credentials

# ===== AWS SES SMTP Settings =====
# Get these from AWS SES Console > SMTP Settings > Create SMTP Credentials
SMTP_HOST=email-smtp.us-east-1.amazonaws.com
SMTP_PORT=587
SMTP_USERNAME=YOUR_AWS_SES_SMTP_USERNAME_HERE
SMTP_PASSWORD=YOUR_AWS_SES_SMTP_PASSWORD_HERE
SMTP_USE_TLS=true

# Sender email (must be verified in AWS SES)
FROM_EMAIL=noreply@yourdomain.com
FROM_NAME=BIMCalc Reports

# ===== Database Configuration =====
DATABASE_URL=postgresql+asyncpg://bimcalc:changeme@db:5432/bimcalc

# ===== Redis Configuration =====
REDIS_URL=redis://redis:6379

# ===== Application Settings =====
DEFAULT_ORG_ID=default
DEFAULT_CURRENCY=EUR
VAT_INCLUDED=true
VAT_RATE=0.23
LOG_LEVEL=INFO

# ===== CMM Configuration =====
USE_CMM=true
CMM_CONFIG_DIR=config/vendors

# ===== OpenAI API (for embeddings and LLM) =====
OPENAI_API_KEY=your_openai_api_key_here
EMBEDDINGS_MODEL=text-embedding-3-large
LLM_MODEL=gpt-4-1106-preview

# ===== Auth Settings =====
BIMCALC_AUTH_DISABLED=false

# ===== Browser/Playwright =====
PLAYWRIGHT_CDP_URL=ws://browser:3000

# ===== API Base URL =====
API_BASE_URL=http://app:8001
